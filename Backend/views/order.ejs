<% include common/header.ejs %>

<div class="row">
<div class="col-md-offset-3 col-md-6 col-xs-12">
<form method="post" id="order">
  <div class="form-group">
    <label for="name">Ім'я</label>
    <input type="text" class="form-control" id="name" placeholder="Наприклад, Тетяна Подкова">
  </div>
  <div class="form-group">
    <label for="address">Адреса</label>
    <input type="text" class="form-control" id="address" placeholder="Наприклад, вул. Велика Васильківська, 9, кв. 12, під'їзд 1">
    <p class="help-text" id="eta"></p>
  </div>
  <div class="form-group">
    <label for="phone">Контактний телефон</label>
    <div class="input-group">
      <span class="input-group-addon" id="phone-prefix">+380</span>
      <input type="text" class="form-control" placeholder="991234567" id="phone" aria-describedby="phone-prefix">
      <input type="hidden" name="phone" />
    </div>
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>

<div class="panel panel-danger hidden" id="error"></div>

<div id="map"></div>

</div>
</div>

